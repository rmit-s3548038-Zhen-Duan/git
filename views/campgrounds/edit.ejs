<% include ../partials/header %>

<div class="container">
<div class="row">
<div class="text-center">
    
    <h1>Edit <%=campground.name%></h1>
</div>


<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" style="width: 30%; margin: 30px auto">
    
    
    <div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" type="text" name="name" value="<%=campground.name%>">
    </div>
    
    <div class="form-group">
    <label for="cost">Cost</label>
    <input class="form-control" type="number" name="cost" value="<%=campground.cost%>" step="0.1" min="0">
    </div>
    
    <div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
    </div>
    
    
     <div class="form-group">
    <label for="image">Image</label>
    <input class="form-control" type="text" name="image" value="<%=campground.image%>">
     </div>
     
    <div class="form-group">
    <label for="description">Description</label>
    <input class="form-control" type="text" name="description" value="<%=campground.description%>">
     </div>
     
     <div class="form-group">
    <button class="btn btn-primary btn-lg btn-block">Update</button>
     </div>
    
</form>
<a href="/campgrounds">Go Back</a>

</div>
</div>

<% include ../partials/footer %>